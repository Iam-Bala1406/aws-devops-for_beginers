pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/your-username/your-repo.git'  // Replace with your repo URL
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Print Hello World') {
            steps {
                echo 'Hello, World! Jenkins Pipeline with Maven!'
            }
        }
    }
}
